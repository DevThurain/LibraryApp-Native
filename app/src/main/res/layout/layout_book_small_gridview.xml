<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/margin_medium"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.thurainx.libraryapp.views.components.RoundedImageView
        android:id="@+id/ivBookSmallGridCover"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        app:cornerRadius="@dimen/margin_medium"
        app:srcCompat="@drawable/dummy_book" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivBookSmallGridCover"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBookSmallGridViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/lbl_dummy"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/text_regular" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBookSmallGridViewAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_smaller"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Thurain Bo Win"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/text_regular" />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tvBookSmallGridViewMore"
        android:layout_width="@dimen/margin_large"
        android:layout_height="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_alignParentEnd="true"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_more_horizotal" />

</RelativeLayout>