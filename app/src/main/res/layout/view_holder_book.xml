<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_medium_2"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.thurainx.libraryapp.views.components.RoundedImageView
        android:id="@+id/ivBookCover"
        android:layout_width="200dp"
        android:layout_height="280dp"
        app:srcCompat="@drawable/dummy_book"
        android:scaleType="centerCrop"
        app:cornerRadius="@dimen/margin_medium_2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBookDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_below="@id/ivBookCover"
        android:text="@string/lbl_dummy"
        android:textColor="@color/light_grey"
        android:maxLines="2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvBookDetail"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBookRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin_small"
            android:text="4.2"
            android:textColor="@color/light_grey" />


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/margin_medium_2"
            android:layout_height="@dimen/margin_medium_2"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_star_fill"
            app:tint="@color/light_grey" />



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBookPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_medium"
            android:text="$0.07"
            android:textColor="@color/light_grey" />


    </LinearLayout>





</RelativeLayout>