<?xml version="1.0" encoding="utf-8"?>
<com.thurainx.libraryapp.views.viewpods.BookTypeViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutBookType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabIndicatorColor="@color/primary_blue"
        app:tabIndicatorHeight="3dp"
        app:tabMode="fixed"
        app:tabIndicatorFullWidth="false"
        app:tabSelectedTextColor="@color/primary_blue"
        app:tabTextAppearance="@style/CustomTabTextAppearance"
        app:tabTextColor="@color/dark_grey" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey_30percent"
        android:layout_below="@id/tabLayoutBookType"
        />

</com.thurainx.libraryapp.views.viewpods.BookTypeViewPod>