<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/flCategory"
    android:background="@drawable/background_rating_unselected"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginStart="@dimen/margin_medium_2"
    android:paddingVertical="@dimen/margin_card_medium"
    android:paddingHorizontal="@dimen/margin_large"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRatingCount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="2"
            android:textSize="@dimen/text_regular"
            android:textColor="@color/light_grey" />

        <ImageView
            android:id="@+id/ivReviewDetailBack"
            android:layout_width="@dimen/margin_medium_3"
            android:layout_height="@dimen/margin_medium_3"
            android:layout_marginStart="@dimen/margin_medium"
            app:tint="@color/light_grey"
            android:src="@drawable/ic_star_fill" />
    </LinearLayout>

</FrameLayout>

